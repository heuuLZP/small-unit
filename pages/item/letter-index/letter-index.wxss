/* letter-index.wxss */
/**
* 右侧字母索引容器
**/
.index-wrap {
  position: fixed;
  right: 0;
  top: 0;
  z-index: 99;
  width: 60rpx;
  text-align: center;
}
.index-item {
  height: 44rpx;
  line-height: 44rpx;
  font-size: 26rpx;
  color: #ff0000;
}
/**
* 右侧字母索引容器
* 背景
**/
.index-wrap-hover {
  background: rgba(0, 0, 0, 0.3);
}
/**
* 列表
**/
.list-section {
  border-bottom: 2rpx solid #e4e4e4;
  height: 50rpx;
  line-height: 50rpx;
  padding-left: 30rpx;
  font-size:28rpx;
  color: #666;
}
.list-item {
  border-bottom: 2rpx solid #e4e4e4;
  padding-left: 30rpx;
  height: 100rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 30rpx;
  color: #333;
}
/**
* 提示
**/
.letter-show {
  width:200rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 99;
  margin-left: -100rpx;
  margin-top: -100rpx;
  background: rgba(0, 0, 0, 0.3);
  color: #fff;
}